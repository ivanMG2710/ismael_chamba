@page
@model IntroduccionRazorPages.Pages.FormularioContactoModel


@{
}


<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Formulario de Contacto</h2>

        @if(Model.error.Length > 0)
        {
           <div class="alert alert-warning alert-dismissible fade show" role="alert">
               <strong>@Model.error</strong>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (Model.mensajeRespuesta.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.mensajeRespuesta</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nombre: </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nombre"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Correo: </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Correo"/>
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>
            <!--Selección-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Asunto: </label>
                <div class="col-sm-8">
                    <select class="form-control">
                        <option>Sugerencia</option>
                        <option>Queja</option>
                        <option>Felicitación</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Mensaje:</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" asp-for="Mensaje"></textarea>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                    </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-8">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </div>
        </form>
    </div>
</div>