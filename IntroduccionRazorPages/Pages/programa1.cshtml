}

<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Calculadora de IMC</h2>
        <p>Indice de Masa Corporal</p>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Peso: </label>
                <div class="col-sm-8">
                    <input type="number" asp-for="peso"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Altura: </label>
                <div class="col-sm-8">
                    <input type="number" asp-for="altura" />
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-8">
                    <button type="submit" class="btn btn-primary">Calcular</button>
                </div>
            </div>
        </form>
    </div>
</div>

